<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ln_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/_22sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ngày bán"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_product_price"
            android:layout_width="0dp"
            android:layout_height="@dimen/_22sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mã SP"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_product_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/_22sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Giá SP"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_list_money"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/text_money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln_header" />

    <TextView
        android:id="@+id/text_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:gravity="end|center_vertical"
        android:paddingEnd="@dimen/_8sdp"
        android:text="Tổng: 12.000.000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
